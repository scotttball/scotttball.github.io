{
  "scripts": {
    "build": "snowpack build --treeshake",
    "build:tailwind": "NODE_ENV=production tailwindcss build tailwind.css -o tailwind.generated.css",
    "start:snowpack": "snowpack dev",
    "build:css": "postcss",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore tailwind.generated.css -c 'npm run build:tailwind'",
    "start": "run-p watch:tailwind start:snowpack",
    "prepublish": "yarn build:tailwind",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-brands-svg-icons": "^5.13.1",
    "@fortawesome/free-solid-svg-icons": "^5.13.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "autoprefixer": "^9.8.5",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.6.0-alpha.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "jest": "^25.4.0",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.5",
    "snowpack": "^2.6.4",
    "typescript": "^3.8.0"
  }
}
